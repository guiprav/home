#!/bin/sh
if [ "$#" -eq 1 ];
then
	FAVE_CONTEXT="_"
	FILE_PATH="$1"
elif [ "$#" -eq 2 ];
then
	FAVE_CONTEXT="$1"
	FILE_PATH="$2"
else
	echo "Bad arguments." >/dev/stderr
	echo "Usage: fave [context] file-path"
	exit 1
fi
BUFFER_NAME="fave-$FAVE_CONTEXT"
realpath "$FILE_PATH" |grab-append "$BUFFER_NAME" 1>/dev/null
recycle "$BUFFER_NAME"
