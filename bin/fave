#!/bin/sh
if [ "$1" = "-p" ];
then
	ACTION="print"
	FAVE_CONTEXT="$2"
elif [ "$#" -eq 1 ];
then
	ACTION="add"
	FILE_PATH="$1"
elif [ "$#" -eq 2 ];
then
	ACTION="add"
	FAVE_CONTEXT="$1"
	FILE_PATH="$2"
else
	echo "Bad arguments." >/dev/stderr
	echo "Usage:"
	echo "\tfave [context] file-path"
	echo "\tfave -p [context]"
	exit 1
fi
if [ "$FAVE_CONTEXT" = "" ];
then
	FAVE_CONTEXT="_"
fi
BUFFER_NAME="fave-$FAVE_CONTEXT"
if [ "$ACTION" = "add" ];
then
	realpath "$FILE_PATH" |grab-append "$BUFFER_NAME" 1>/dev/null
	recycle "$BUFFER_NAME"
elif [ "$ACTION" = "print" ];
then
	recycle "$BUFFER_NAME"
fi
