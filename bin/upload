#!/bin/sh

set -e

if [ -z "$TEAMKEY" ];
then
    echo "Missing TEAMKEY." >/dev/stderr
    exit 1
fi

FILE_PATH="$1"

if [ ! -t 0 ];
then
    FILE_FIELD_TAIL=";filename=stdin.$FILE_PATH"
    FILE_PATH=-
fi

result=$(curl -F "file=@$FILE_PATH$FILE_FIELD_TAIL" "http://teamfiles.n2.gs/upload/$TEAMKEY")

echo "http://teamfiles.n2.gs/$result"
