#!/bin/bash
set -e

script_dir="$(dirname "${BASH_SOURCE[0]}")"

node_modules_dir="$script_dir/../node_modules"

http_server_bin="$node_modules_dir/http-server/bin/http-server"

while true;
do
    case "$1" in
        -p)
            server_options+=" -p $(printf %q "$2")"; shift
            ;;

        -o)
            server_options+=" -o"
            ;;

        -s)
            server_options+=" -s"
            ;;

        *)
            break
            ;;
    esac

    shift
done

if [ "$#" = "0" ];
then
    paths="."
else
    paths=$@
fi

temp_dir_path="$(mktemp -d)"

trap '
    cd /tmp
    rm -rf "'"$temp_dir_path"'"
' SIGINT SIGTERM EXIT

for path in $paths;
do
    ln -s "$(readlink -f "$path")" "$temp_dir_path"
done

cd "$temp_dir_path"

"$http_server_bin" . $server_options
