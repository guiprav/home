#!/usr/bin/env node
var moment = require('moment');
var die = require('../lib/die');
var strtotime = require('../lib/strtotime');
var log_file_path = process.env.HOME + '/.log';
var args = process.argv.slice(2);
var date_time_label =
	moment.unix(strtotime(args.shift()) || die("Invalid time expression.")).format("YYYY-MM-DD hh:mm:ss:")
;
var event = {};
var parsers;
event.positionals = [];
parsers = (function() {
	var parsers = [];
	parsers.push ({
		regexp: /^([a-zA-Z0-9]+):(.+)$/
		, fn: function(arg, key, value) {
			event[key] = value;
		}
	});
	parsers.push ({
		regexp: /^(\d+h)? *(\d+m)?$/
		, fn: function(arg) {
			event.duration = arg;
		}
	});
	parsers.push ({
		regexp: /^.*$/
		, fn: function(arg) {
			event.positionals.push(arg);
		}
	});
	return parsers;
})();
(function parse() {
	args.forEach (
		function(arg) {
			parsers.some (
				function(parser) {
					var matches = parser.regexp.exec(arg);
					return (
						matches
						&& matches[0] !== ""
						&& parser.fn.apply(null, matches) !== false
					);
				}
			);
		}
	);
})();
console.log(date_time_label + ' ' + JSON.stringify(event));
